generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Entity {
  id        String   @id @default(uuid())
  type      String   @unique
  patterns  Json
  className String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
}

model Environment {
  id        String   @id @default(uuid())
  type      String   @unique
  patterns  Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
}

model GuardianTrait {
  id        String   @id @default(uuid())
  type      String   @unique
  values    Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
}

model Codex {
  id         String   @id @default(uuid())
  cycle      Int
  content    String
  created_at DateTime @default(now())

  @@index([cycle])
} 